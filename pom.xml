	<groupId>br.com.home.lab</groupId>
	<artifactId>teste-software-api</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>test-software-api</name>
	<description>Simple project for Spring Boot and REST API</description>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.6.15</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>17</java.version>
		<lombok.version>1.18.28</lombok.version>
		<testng.version>7.8.0</testng.version>
		<cucumber.version>7.12.1</cucumber.version>
		<argLine>-Xms256m -Xmx1524m -XX:MaxPermSize=256m -Duser.language=en</argLine>
		<java.faker>2.0.1</java.faker>
		<owner.version>1.0.12</owner.version>
		<bootstrap.version>5.2.0</bootstrap.version>
		<webjars-locator.version>0.45</webjars-locator.version>

		<byte.buddy.version>1.14.5</byte.buddy.version>
		<mockito.version>5.3.1</mockito.version>

		<coverage_ratio_percentage>0.9</coverage_ratio_percentage>
		<jacoco.maven.plugin.version>0.8.10</jacoco.maven.plugin.version>
		<maven.surefire.plugin.version>3.1.2</maven.surefire.plugin.version>
		<maven.compiler.plugin.version>3.11.0</maven.compiler.plugin.version>

		<postgressql.versrion>42.2.27</postgressql.versrion>

		<assertj.version>3.24.2</assertj.version>
		<!-- for token authentication -->
		<jsonwebtoken.version>0.12.3</jsonwebtoken.version>
	</properties>

	<profiles>
		<profile>
			<id>test</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<db.folder>hsqldb-test</db.folder>
				<env>Test</env>
			</properties>
		</profile>
		<profile>
			<id>prod</id>
			<properties>
				<db.folder>hsqldb</db.folder>
				<env>Production</env>
			</properties>
		</profile>

	</profiles>

	<dependencies>
		<!-- dependency>
			<groupId>javax.validation</groupId>
